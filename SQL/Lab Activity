USE Subrata;
CREATE TABLE Patient(
    SS VARCHAR(20) PRIMARY KEY,
    NAME VARCHAR(100),
    Insurance VARCHAR(100),
    Date_Admitted DATE,
    Date_Checked_Out DATE
);
CREATE TABLE Doctors(
    DSS VARCHAR(20) PRIMARY KEY,
    Name VARCHAR(20),
    Specialization VARCHAR(50)
);
CREATE TABLE Tests(
    TestID INT PRIMARY KEY,
    Date DATE,
    Time TIME,
    Result VARCHAR(255)
);
CREATE TABLE TestLog(
    SS VARCHAR(20),
    TestID INT,
    PRIMARY KEY (SS, TestID),
    FOREIGN KEY (SS) REFERENCES Patient(SS),
    FOREIGN KEY (TestID) REFERENCES Tests(TestID)
);
CREATE TABLE DrPatient(
    DSS VARCHAR(20),
    SS VARCHAR(20),
    PRIMARY KEY (DSS, SS),
    FOREIGN KEY (DSS) REFERENCES Doctors(DSS),
    FOREIGN KEY (SS) REFERENCES Patient(SS)
);
SELECT * FROM Patient;
SELECT * FROM Doctors;
SELECT * FROM Tests;
SELECT * FROM TestLog;
SELECT * FROM DrPatient;
